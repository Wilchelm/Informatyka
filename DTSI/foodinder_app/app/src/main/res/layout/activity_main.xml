<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <link.fls.swipestack.SwipeStack
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:stack_rotation="0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/container">

        <ImageView
            android:id="@+id/jeden"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:layout_toLeftOf="@id/empty1"
            android:contentDescription="@null" />


        <TextView
            android:id="@+id/empty1"
            android:layout_width="10dp"
            android:layout_toLeftOf="@id/dwa"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/dwa"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:layout_toLeftOf="@id/empty2"
            android:contentDescription="@null" />


        <TextView
            android:id="@+id/empty2"
            android:layout_width="10dp"
            android:layout_toLeftOf="@id/trzy"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/trzy"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null" />


        <TextView
            android:id="@+id/empty3"
            android:layout_width="10dp"
            android:layout_toRightOf="@id/trzy"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/cztery"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:layout_toRightOf="@id/empty3"
            android:contentDescription="@null" />


        <TextView
            android:id="@+id/empty4"
            android:layout_width="10dp"
            android:layout_toRightOf="@id/cztery"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/piec"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:layout_toRightOf="@id/empty4"
            android:contentDescription="@null" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/empty"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/love"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/empty"
            android:contentDescription="@null"
            android:src="@drawable/green" />

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/empty"
            android:contentDescription="@null"
            android:src="@drawable/red" />
    </RelativeLayout>

</RelativeLayout>
